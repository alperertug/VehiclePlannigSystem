@model IEnumerable<Entities.Concrete.Maintenance>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Maintenances</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary btn-outline-success" value="Create">Create New</button>
    </a>
</p>
<div class="text-center">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car.Plate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car.ImageFile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastMaintenanceTime)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.LastMaintenanceMileage)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.WorkDone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NextMaintenanceTime)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.NextMaintenanceMileage)
                </th>*@
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Car.Plate)
                    </td>
                    <td>
                        <img src="@("~/image/" + item.Car.ImageName)" asp-append-version="true" width="150px" height="100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastMaintenanceTime)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.LastMaintenanceMileage)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkDone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NextMaintenanceTime)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.NextMaintenanceMileage)
                    </td>*@
                    
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Edit">
                                <i data-feather="edit"></i>
                            </button>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Details">
                                <i data-feather="info"></i>
                            </button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Delete">
                                <i data-feather="trash"></i>
                            </button>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<p>
    <a asp-controller="Home" asp-action="Index">
        <button type="button" class="btn btn-primary btn-outline-success" value="Admin">Back to Home</button>
    </a>
</p>

