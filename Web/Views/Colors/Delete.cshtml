@model Entities.Concrete.Color

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center">Delete</h1>

<h3 class="center">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="container center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-sm table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <h4 class="text-center">Details</h4>
                                    <hr />
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-4">
                                            Color Name
                                        </td>
                                        <td class="col-sm-8">
                                            @Html.DisplayFor(model => model.ColorName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Created Date
                                        </td>
                                        <td class="col-sm-8">
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Is Deleted
                                        </td>
                                        <td class="col-sm-8">
                                            @Html.DisplayFor(model => model.IsDeleted)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <form asp-action="Delete">
                                <div class="btn-group center" role="group">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Delete" class="btn btn-gradient-danger" />
                                    <a asp-action="Index" class="btn btn-gradient-secondary">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
