@using Business.Abstract;
@model Entities.Concrete.Reservation

@inject IUserService _userManager

@{
    ViewData["Title"] = "Delete";
    var user = "";
    var usrTemp = "";
    var users = _userManager.GetAllUsers();
    foreach (var usr in users)
    {
        if (usr.Id == Model.UserId)
        {
            usrTemp = Model.UserId;
        }
    }
    if (usrTemp != "")
    {
        user = _userManager.GetAllUsers().FirstOrDefault(x => x.Id == usrTemp).UserName;
    }
    else
    {
        user = "Removed User";
    }

}

<h1 class="center">Delete</h1>

<h3 class="center">Are you sure you want to delete this?</h3>

<div>
    <hr />
    <div class="container center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            
                            <br />
                            <table class="table table-sm table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <h4 class="text-center">Details</h4>
                                    <hr />
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-4">
                                            User
                                        </td>
                                        <td class="col-sm-8">
                                            @user
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Vehicle Plate
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Car.Plate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Reservation Date
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ReservationDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Delivery Date
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.DeliveryTime)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Reason
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ReasonForReservation.Reason)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Created Date
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>                                    
                                    <tr>
                                        <td>
                                            Is Deleted
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.IsDeleted)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <form asp-action="Delete">
                                <div class="btn-group center" role="group">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Delete" class="btn btn-gradient-danger" />
                                    <a asp-action="Index" class="btn btn-gradient-secondary">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .right {
        display: flex;
        justify-content: right;
        align-items: right;
    }
</style>