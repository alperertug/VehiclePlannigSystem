@model IEnumerable<Entities.Concrete.ReasonForReservation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Reasons for Reservation</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary btn-outline-success" value="Create">Create New</button>
    </a>
</p>
<div class="text-center">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Reason)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success btn-lg" value="Edit">
                                <i data-feather="edit"></i>
                            </button>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success btn-lg" value="Details">
                                <i data-feather="info"></i>
                            </button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success btn-lg" value="Delete">
                                <i data-feather="trash"></i>
                            </button>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<p>
    <a asp-controller="Home" asp-action="Index">
        <button type="button" class="btn btn-primary btn-outline-success" value="Admin">Back to Home</button>
    </a>
</p>

