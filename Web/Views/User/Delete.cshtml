@using DataAccess.Identity.Data;

@model ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center">Delete</h1>
<h3 class="center">Are you sure you want to delete this?</h3>
<hr />

<div class="container center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Delete">
                            <div class="btn-group center" role="group">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-gradient-danger" />
                                <a asp-action="Index" class="btn btn-gradient-secondary">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
