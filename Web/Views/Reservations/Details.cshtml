@using Business.Abstract;

@inject IUserService _userService

@model Entities.Concrete.Reservation

@{
    ViewData["Title"] = "Details";

    var user = _userService.GetAllUsers().FirstOrDefault(x => x.Id == Model.UserId).UserName;
}

<h1>Details</h1>

<div>
    <h4 class="center">Reservation</h4>
    <hr />
    <div class="container center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-sm table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <h4 class="text-center">Details Card</h4>
                                    <hr />
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-4">
                                            User Name
                                        </td>
                                        <td class="col-sm-6">
                                            @user
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Vehicle Plate
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.Car.Plate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Reservation Date
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.ReservationDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Delivery Date
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.DeliveryTime)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Reason
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.ReasonForReservation.Reason)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Created Date
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Modified Date
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.ModifiedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-4">
                                            Is Deleted
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.IsDeleted)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <form>
                                <div class="btn-group center" role="group">
                                    <button asp-action="Edit" asp-route-id="@Model?.Id" type="submit" class="btn btn-gradient-primary">
                                        Edit
                                    </button>
                                    <button asp-action="Index" type="submit" value="Back" class="btn btn-gradient-secondary">
                                        Back
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .right {
        display: flex;
        justify-content: right;
        align-items: right;
    }
</style>