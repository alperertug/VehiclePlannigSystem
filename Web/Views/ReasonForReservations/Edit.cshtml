@model Entities.Concrete.ReasonForReservation

@{
    ViewData["Title"] = "Edit";
}

<h1 class="center">Edit</h1>

<h4 class="center">Reason For Reservations</h4>
<hr />
<div class="container center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Reason" class="control-label"></label>
                                <input asp-for="Reason" class="form-control" />
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <br />
                            <div class="btn-group center" role="group">
                                <button type="submit" value="Save" class="btn btn-primary">
                                    Save
                                </button>
                                <button asp-action="Index" type="submit" value="Back" class="btn btn-secondary">
                                    Back
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
