@model Entities.Concrete.Car

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center">Delete</h1>

<h3 class="center">Are you sure you want to delete this?</h3>

<div>
    <hr />
    <div class="container center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Delete">
                                <div class="btn-group center" role="group">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Delete" class="btn btn-gradient-danger" />
                                    <a asp-action="Index" class="btn btn-gradient-secondary">Back</a>
                                </div>
                            </form>
                            <br />
                            <table class="table table-sm table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <h4 class="text-center">Details</h4>
                                    <hr />
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Plate)
                                        </td>
                                        <td class="col-sm-8">
                                            @Html.DisplayFor(model => model.Plate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Brand Name
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Model.BrandName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Model Name
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Model.ModelName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Color)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Color.ColorName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Production Year
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ProductionYear)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Person Capacity
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.PersonCapacity)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Load Limit
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.LoadLimit)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Created Date
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Is Deleted
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.IsDeleted)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Vehicle Image
                                        </td>
                                        <td>
                                            <img src="@("~/image/" + Model.ImageName)" asp-append-version="true" width="100%" height="100%" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

