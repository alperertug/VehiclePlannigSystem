@model Entities.Concrete.Maintenance

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center">Delete</h1>

<h3 class="center">Are you sure you want to delete this?</h3>
<hr />

<div>
    <div class="container center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-sm table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <h4 class="text-center">Details</h4>
                                    <hr />
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-6">
                                            Title
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.Title)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Vehicle Plate
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.Car.Plate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Last Maintenance Time
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.LastMaintenanceTime)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Last Maintenance Mileage
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.LastMaintenanceMileage)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Work Done
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.WorkDone)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Next Maintenance Time
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.NextMaintenanceTime)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Next Maintenance Mileage
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.NextMaintenanceMileage)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Created Date
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-6">
                                            Is Deleted
                                        </td>
                                        <td class="col-sm-6">
                                            @Html.DisplayFor(model => model.IsDeleted)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <form asp-action="Delete">
                                <div class="btn-group center" role="group">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Delete" class="btn btn-gradient-danger" />
                                    <a asp-action="Index" class="btn btn-gradient-secondary">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .right {
        display: flex;
        justify-content: right;
        align-items: right;
    }
</style>