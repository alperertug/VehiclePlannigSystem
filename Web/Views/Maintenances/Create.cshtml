@model Entities.Concrete.Maintenance

@{
    ViewData["Title"] = "Create";
}

<h1 class="center">Create</h1>

<h4 class="center">Maintenance</h4>
<hr />
<div class="container center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="control-label">Select Vehicle</label>
                                    <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Annual Maintenance" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="control-label">Last Maintenance Time</label>
                                    <input asp-for="LastMaintenanceTime" class="form-control" />
                                    <span asp-validation-for="LastMaintenanceTime" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Last Maintenance Mileage</label>
                                    <input asp-for="LastMaintenanceMileage" class="form-control" />
                                    <span asp-validation-for="LastMaintenanceMileage" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="control-label">Work Done</label>
                                    <input asp-for="WorkDone" class="form-control" placeholder="Routine Maintenance Done" />
                                    <span asp-validation-for="WorkDone" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="control-label">Next Maintenance Time</label>
                                    <input asp-for="NextMaintenanceTime" class="form-control" />
                                    <span asp-validation-for="NextMaintenanceTime" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Next Maintenance Mileage</label>
                                    <input asp-for="NextMaintenanceMileage" class="form-control" />
                                    <span asp-validation-for="NextMaintenanceMileage" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="btn-group center" role="group">
                                <button type="submit" value="Create" class="btn btn-gradient-primary">
                                    Create
                                </button>
                                <button asp-action="Index" type="submit" value="Back" class="btn btn-gradient-secondary">
                                    Back
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
