                @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.DeletedDate)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>*@
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Edit">
                                <i data-feather="edit"></i>
                            </button>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Details">
                                <i data-feather="info"></i>
                            </button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-primary btn-outline-success" value="Delete">
                                <i data-feather="trash"></i>
                            </button>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


